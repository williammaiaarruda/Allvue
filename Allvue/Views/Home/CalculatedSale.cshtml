@model StockBatchSale

@{
    ViewData["Title"] = "Sales Calculator";
}
<div class="card shadow p-4 w-50 mx-auto">
    <h4 class="text-primary fw-bold">Sale Calculation Result</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-5 text-muted"> @Html.DisplayNameFor(model => model.RemainingStocksAfterSale) </dt>
        <dd class="col-sm-7 fw-bold"> @Html.DisplayFor(model => model.RemainingStocksAfterSale) </dd>

        <dt class="col-sm-5 text-muted"> @Html.DisplayNameFor(model => model.SoldStocksCostBasis) </dt>
        <dd class="col-sm-7 fw-bold"> @($"{Model.SoldStocksCostBasis:C}") </dd>

        <dt class="col-sm-5 text-muted"> @Html.DisplayNameFor(model => model.RemainingStocksCostBasis) </dt>
        <dd class="col-sm-7 fw-bold"> @($"{Model.RemainingStocksCostBasis:C}") </dd>

        <dt class="col-sm-5 text-muted"> @Html.DisplayNameFor(model => model.SaleProfitResult) </dt>
        <dd class="col-sm-7 fw-bold">
            <span class="profit-loss @(Model.SaleProfitResult >= 0 ? "profit" : "loss")">
                @(Model.SaleProfitResult < 0 ? "-" : "+")@($"{Math.Abs(Model.SaleProfitResult):C}")
            </span>
        </dd>
    </dl>

    <div class="d-flex justify-content-end mt-4">
        <a asp-action="Index" class="btn btn-secondary btn-md shadow rounded-pill back-button">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>


<style type="text/css">
    .card {
        border-radius: 10px;
        border: 1px solid #ddd;
        background: #fff;
    }

    .shadow {
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    }

    h4 {
        text-transform: uppercase;
        letter-spacing: 1px;
        font-weight: bold;
        text-align: center;
    }

    .text-muted {
        font-weight: 600;
    }

    .fw-bold {
        font-size: 1.1rem;
    }

    .profit-loss {
        font-weight: bold;
        font-size: 1.2rem;
    }

    .profit {
        color: #007bff; 
    }

    .loss {
        color: #dc3545; 
    }

    .back-button {
        padding: 8px 18px;
        font-size: 1rem;
        font-weight: bold;
        transition: all 0.3s ease-in-out;
    }

        .back-button:hover {
            background-color: #5a6268; 
            transform: translateX(-3px); 
        }

</style>
