@model IEnumerable<Allvue.Models.StockBatch>

@{
    ViewData["Title"] = "Stock Batch List";
}

<div class="card shadow-lg p-4 w-75 mx-auto">
    <h2 class="text-primary fw-bold text-center mb-4">Stock Batch List</h2>

    <div class="d-flex justify-content-end mb-3">
        <a asp-action="ResetMockData" class="btn btn-secondary btn-lg shadow rounded-pill me-3">
            <i class="bi bi-arrow-clockwise"></i> Reset Data
        </a>
        <a asp-action="SalesCalculator" class="btn btn-primary btn-lg shadow rounded-pill">
            <i class="bi bi-calculator"></i> Calculate Sale
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover text-center">
            <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Quantity)</th>
                <th>@Html.DisplayNameFor(model => model.RemainingQuantity)</th>
                <th>@Html.DisplayNameFor(model => model.UnitPrice)</th>
                <th>@Html.DisplayNameFor(model => model.AcquisitionDate)</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                    <td>@Html.DisplayFor(modelItem => item.RemainingQuantity)</td>
                    <td>@($"{item.UnitPrice:C}")</td>
                    <td>@item.AcquisitionDate.ToString("MM/dd/yyyy")</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>

<style type="text/css">
    .card {
        border-radius: 12px;
        border: 1px solid #ddd;
        background: #fff;
    }

    .shadow-lg {
        box-shadow: 0px 6px 10px rgba(0, 0, 0, 0.15);
    }

    h2 {
        text-transform: uppercase;
        letter-spacing: 1px;
        font-weight: bold;
    }

    .table {
        border-radius: 8px;
        overflow: hidden;
    }

        .table th, .table td {
            padding: 12px;
            vertical-align: middle;
            text-align: center;
        }

        .table thead {
            background: #343a40;
            color: white;
        }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #f8f9fa;
    }

    .table-hover tbody tr:hover {
        background-color: #e9ecef;
        transition: background 0.3s ease-in-out;
    }

    .btn-lg {
        font-size: 1.2rem;
        padding: 10px 20px;
    }

    .rounded-pill {
        border-radius: 50px;
    }

    .btn:hover {
        transform: scale(1.05);
        transition: all 0.2s ease-in-out;
    }

</style>